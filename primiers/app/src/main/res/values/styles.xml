<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>    <!--android:statusBarColor的颜色默认继承自colorPrimary-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_small</item>
        <!--<item name="android:textColorPrimary">@color/white</item>--><!--可以设置字体的主色调-->
    </style>

    <style name="PRIMIERS_THEME" parent="AppTheme">
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="toolOverlay" parent="Base.ThemeOverlay.AppCompat.Light">
          <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">@color/text_main_color</item>
        <item name="tabIndicatorHeight">@dimen/wire_big</item>
        <item name="tabPaddingStart">25dp</item>
        <item name="tabPaddingEnd">25dp</item>
        <item name="tabSelectedTextColor">@color/text_main_color</item>
        <item name="tabTextAppearance">@style/tab</item>
    </style>

    <style name="tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_nor</item>
        <!-- 未选中的字体颜色 -->
        <item name="android:textColor">@color/text_sub_color</item>
    </style>
</resources>
